#pragma config(Sensor, in1,    liftPot,        sensorPotentiometer)
#pragma config(Sensor, in2,    clawPot,        sensorPotentiometer)
#pragma config(Sensor, dgtl1,  encRight,       sensorQuadEncoder)
#pragma config(Sensor, dgtl3,  encLeft,        sensorQuadEncoder)
#pragma config(Motor,  port1,           leftBack,      tmotorVex393_HBridge, openLoop)
#pragma config(Motor,  port2,            ,             tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port3,           leftFront,     tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port4,           leftTower,     tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port7,           claw,          tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port8,           rightTower,    tmotorVex393_MC29, openLoop, reversed)
#pragma config(Motor,  port9,           rightFront,    tmotorVex393_MC29, openLoop, reversed)
#pragma config(Motor,  port10,          rightBack,     tmotorVex393_HBridge, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
task main()
{

	bool manual = false;
	bool openClaw = false;
	bool closeClawCube = false;
	bool closeClawStar = false;
	bool liftUp = false;
	bool liftDown = false;
	bool liftPickup = false;
	bool going = false;
	SensorValue[liftPot] = 0;
	SensorValue[clawPot] = 0;


	while(1==1) {
		motor[leftFront] = vexRT[Ch3] + vexRT[Ch1];
		motor[leftBack] = vexRT[Ch1] + vexRT[Ch3];
		motor[rightFront] = vexRT[Ch3] - vexRT[Ch1];
		motor[rightBack] = vexRT[Ch1] - vexRT[Ch3];

		if (vexRT[Btn6U] && SensorValue[liftPot] < 1400) {
			liftUp = true;
			liftDown = false;
		}

		if (vexRT[Btn6D] && SensorValue[liftPot] > 0) {
			liftDown = true;
			liftUp = false;
		}

		if (vexRT[Btn5U] && SensorValue[liftPot] < 600) {
			liftPickup = true;
			liftDown = false;
		}


		if (vexRT[Btn8R] && SensorValue[clawPot] < 3100) {
			closeClawCube = true;
			openClaw = false;
		}
		if (vexRT[Btn8U] && SensorValue[clawPot] > 2500) {
			openClaw = true;
			closeClawCube = false;
			closeClawStar = false;
		}
		if (vexRT[Btn8L] && SensorValue[clawPot] < 3100) {
			closeClawStar = true;
			openClaw = false;
		}

		if (liftPickup) {
			motor[leftTower] = 20;
			motor[rightTower] = 20;
			if (SensorValue[liftPot] > 600) {
				liftPickup = false;
				motor[leftTower] = 0;
				motor[rightTower] = 0;
			}
		}

		if (liftUp) {
			motor[leftTower] = 60;
			motor[rightTower] = 60;
			if (SensorValue[liftPot] > 1400) {
				liftUp = false;
				motor[leftTower] = 0;
				motor[rightTower] = 0;
			}
		}

		if (liftDown) {
			motor[leftTower] = -40;
			motor[rightTower] = -40;
			if (SensorValue[liftPot] <= 0) {
				liftDown = false;
				motor[leftTower] = 0;
				motor[rightTower] = 0;
			}
		}

		if (closeClawCube) {
			motor[claw] = -80;
			going = true;
			if (SensorValue[clawPot] > 3300 && SensorValue[clawPot] < 3400) {
				motor[claw] = 10;
			}
			if (SensorValue[clawPot] > 3400) {
				closeClawCube = false;
				going = false;
				motor[claw] = 0;
			}
		}

		if (closeClawStar) {
			motor[claw] = -80;
			going = true;
			if (SensorValue[clawPot] > 3400 && SensorValue[clawPot] < 3500) {
				motor[claw] = 10;
			}
			if (SensorValue[clawPot] > 3500) {
				closeClawStar = false;
				going = false;
				motor[claw] = 0;
			}
		}

		if (openClaw) {
			motor[claw] = 40;
			if (SensorValue[clawPot] < 2500) {
				openClaw = false;
				motor[claw] = 0;
			}
		}
	}
}
